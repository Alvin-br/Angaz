    <div class="checkout-card">
        <a href="about.html" class="logo">Angaza<span class="dot">.</span></a>
        <img src="https://upload.wikimedia.org/wikipedia/commons/1/15/M-PESA_LOGO-01.svg" class="mpesa-logo" alt="M-Pesa">
        
        <h3>Secure Checkout</h3>
        
        <div class="order-summary">
            <p id="item-display">Loading item...</p>
            <strong id="price-display">KES 0</strong>
        </div>

        <div class="input-group">
            <label>Your Name</label>
            <input type="text" id="name" placeholder="Full Name">
        </div>

        <div class="input-group">
            <label>M-Pesa Number</label>
            <input type="tel" id="phone" placeholder="2547XXXXXXXX">
        </div>

        <button class="pay-btn" onclick="triggerSTK()">Pay via M-Pesa</button>
    </div>

    <script>
        // 1. Get Data from URL
        const urlParams = new URLSearchParams(window.location.search);
        const itemName = urlParams.get('item');
        const itemPrice = urlParams.get('price');

        // 2. Display the data
        if(itemName && itemPrice) {
            document.getElementById('item-display').innerText = itemName;
            document.getElementById('price-display').innerText = "KES " + Number(itemPrice).toLocaleString();
        }

        // 3. Trigger Payment logic
        function triggerSTK() {
            const phone = document.getElementById('phone').value;
            const name = document.getElementById('name').value;

            if(!phone || !name) {
                alert("Please fill in all details");
                return;
            }

            alert(`Requesting KES ${itemPrice} from ${phone}. Please check your phone for the PIN prompt!`);
            
            // Here is where you would call your Daraja API backend
        }
    </script>
